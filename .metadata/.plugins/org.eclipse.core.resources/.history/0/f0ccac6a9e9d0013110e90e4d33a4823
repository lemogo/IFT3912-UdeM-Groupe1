/**
 * 
 */
package DataBase.Command;

import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

/**
 * Classe permettant de creer et d'encapsuler une requete a etre executee
 * sur la base de donnees. Elle contient aussi le(s) resultat(s) de l'execution de la requete.
 * @author Sebastien Meunier
 */
public abstract class AbstractCommand {

	/**
	 * 
	 */
	public AbstractCommand(String query) {
		this.query_ = query;
	}

	public boolean execute(Statement stat) {
		boolean returnValue = false;
		try {
			result_ = stat.executeQuery(query_);
			returnValue = true;
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return returnValue;
	}

	
	/**
	 * method to build the query
	 * @return query builded
	 */
	public String builQuery(){
		return query_;
	}
	/**
	 * @return query to be executed
	 */
	public String geJtQuery()
	{
		return query_;
	}
	
	public ResultSet getResultSet()
	{
		return result_;
	}

	/**
	 * query
	 */
	final private String query_;
	private ResultSet result_;
}